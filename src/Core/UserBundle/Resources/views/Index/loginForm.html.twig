<div ng-if="resettingSuccess" class="alert alert-success">
    <span>{{ 'form.resetting.success'|trans([], 'index') }}</span>
</div>
<form ng-show="showLoginForm" novalidate class="login-form {% if error %} has-error {% endif %}" name="loginForm" action="{{ path("fos_user_security_check") }}" autocomplete="off" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <h3 class="form-title">{{ 'form.login.title'|trans([], 'index') }}</h3>
    {% if error %}
        <div class="alert alert-danger">
            <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
        </div>
    {% endif %} 
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" type="text" autocomplete="off" id="username" name="_username" value="{{ last_username }}" ng-minlength="3" required="required" ng-model="data['_username']" ng-init="data['_username'] = '{{ last_username }}'"/>                
        </div>
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>                
            <input class="form-control placeholder-no-fix" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" type="password" autocomplete="off" id="password" name="_password" required="required" ng-minlength="6" ng-maxlength="32" ng-model="data['_password']" />
        </div>
    </div>
    <div class="form-actions">
        <button ng-disabled="loginForm.$invalid" type="submit" class="btn btn-default margin-right-10 pull-left">
            {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }} <i class="fa fa-arrow-circle-o-right"></i>
        </button>
        <p ng-if="resettingSuccess === false" ng-click="setShowLoginForm(false)" class="forget-password pull-right margin-top-5">{{ 'form.login.forgot_password.title'|trans([], 'index') }}</p>
    </div>  
</form>  
